 {{#each this}}
  <li class='gallery__list' id='{{id}}'>

    {{#if poster_path}}
      <img
        src='https://image.tmdb.org/t/p/w500/{{poster_path}}'
        onerror="this.onerror=null;this.src='https://upload.wikimedia.org/wikipedia/commons/thumb/6/65/No-Image-Placeholder.svg/1665px-No-Image-Placeholder.svg.png'"
        alt='{{title}}'
        title='{{title}}'
        class='gallery__image'
      />
    {{/if}}
    {{#unless poster_path}}
      <img
        class='gallery__image gallery__image-border'
        src='https://upload.wikimedia.org/wikipedia/commons/thumb/6/65/No-Image-Placeholder.svg/1665px-No-Image-Placeholder.svg.png'
        alt='film photo'
        style='border:2px solid #ff6b08'
      />
    {{/unless}}
    <h2 class='gallery__title'>{{title}}</h2>
         <p class='gallery__text'><span>{{#each genres}}
            {{name}}<span class='comma'>,</span>
          {{/each}}</span>
        |
        <span>{{first_air_date}} {{release_date}}</span><span class='rait'>{{vote_average}}</span>
      </p>
  </li>
 {{/each}}